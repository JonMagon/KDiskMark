<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.jonmagon.kdiskmark</id>

  <name>KDiskMark</name>
  <summary>Disk benchmark tool</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>

  <description>
    <p>
      A simple open-source disk benchmark tool for Linux distros.
    </p>
    <p>Features:</p>
    <ul>
      <li>Configurable block size, queues, and threads count for each test</li>
      <li>Many languages support</li>
      <li>Report generation</li>
    </ul>
  </description>

  <url type="homepage">https://github.com/JonMagon/KDiskMark</url>
  <url type="bugtracker">https://github.com/JonMagon/KDiskMark/issues</url>
  <url type="translate">https://crowdin.com/project/kdiskmark</url>

  <developer_name>Dmitry Sidorov (JonMagon)</developer_name>

  <launchable type="desktop-id">io.github.jonmagon.kdiskmark.desktop</launchable>

  <content_rating type="oars-1.1"/>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/JonMagon/KDiskMark/master/assets/images/kdiskmark.png</image>
    </screenshot>
  </screenshots>
  <releases>
    <release version="3.2.0" date="2025-06-21">
      <description>
        <p>Changelog:</p>
        <ul>
          <li>Removed country flags from language selector</li>
          <li>Used clat instead of lat for latency measurements</li>
          <li>Improved translations in .desktop file</li>
          <li>Added Spanish (es_ES) localization</li>
          <li>Added Finnish (fi_FI) localization</li>
          <li>Added Traditional Chinese (zh_TW) localization</li>
          <li>Added Hindi (hi_IN) localization</li>
          <li>Added Dutch (nl_NL) localization</li>
          <li>Storage model name in benchmark reports</li>
          <li>BTRFS Copy-on-Write (CoW) detection and no-CoW directory support</li>
          <li>Enhanced error reporting for filesystem operations</li>
          <li>Icons to menu items</li>
          <li>Fixed tab order and UI spacing issues</li>
          <li>Fixed window icon display</li>
        </ul>
      </description>
    </release>
    <release version="3.1.4" date="2023-06-19">
      <description>
        <p>Changelog:</p>
        <ul>
          <li>Fixed config directory name to ~/.config/kdiskmark</li>
          <li>Hungarian localization correction.</li>
          <li>Fixed window icon.</li>
          <li>Dutch localization.</li>
        </ul>
      </description>
    </release>
    <release version="3.1.3" date="2023-04-15">
      <description>
        <p>Changelog:</p>
        <ul>
          <li>Benchmark file name is randomly generated.</li>
          <li>Fixed the device list template when changing the locale.</li>
          <li>Added Japanese localization.</li>
        </ul>
      </description>
    </release>
    <release version="3.1.2" date="2022-09-16"/>
  </releases>
</component>
